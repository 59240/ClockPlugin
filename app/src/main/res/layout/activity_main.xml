<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#EEE">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背景透明度:"
        android:textSize="19sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <RadioButton
            android:id="@+id/bgTransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全透明"/>
        <RadioButton
            android:text="半透明"
            android:id="@+id/bgTranslucent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/bgOpaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不透明"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体颜色选择"
        android:textSize="19sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="58dp"
                android:layout_height="50dp"
                android:background="#FFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <View
                android:layout_width="58dp"
                android:layout_height="50dp"
                android:background="#000"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <View
                android:layout_width="58dp"
                android:layout_height="50dp"
                android:background="#888"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <View
                android:layout_width="58dp"
                android:layout_height="50dp"
                android:background="#F00"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:button="@null"
                android:background="@drawable/radio_button_style"/>

            <RadioButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:button="@null"
                android:background="@drawable/radio_button_style"/>
            <RadioButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:button="@null"
                android:background="@drawable/radio_button_style"/>
            <RadioButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:button="@null"
                android:background="@drawable/radio_button_style"/>
        </RadioGroup>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#000"/>
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#FFF"/>
        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#F00"/>
        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#0F0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#00F"/>
        <RadioButton
            android:id="@+id/radio6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#FF0"/>
        <RadioButton
            android:id="@+id/radio7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#0FF"/>
        <RadioButton
            android:id="@+id/radio8"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#999"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背景颜色选择"
        android:textSize="19sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/radio9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#000"/>
        <RadioButton
            android:id="@+id/radio10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#FFF"/>
        <RadioButton
            android:id="@+id/radio11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#F00"/>
        <RadioButton
            android:id="@+id/radio12"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#0F0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/radio13"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#00F"/>
        <RadioButton
            android:id="@+id/radio14"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#FF0"/>
        <RadioButton
            android:id="@+id/radio15"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#0FF"/>
        <RadioButton
            android:id="@+id/radio16"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radio_style"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="#999"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#FFF" >

        <TextView
            android:text="日期格式"
            android:textSize="19sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
        <ImageView
            android:id="@+id/interceptModelLv"
            android:src="@mipmap/next_page_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/interceptModel"
            android:textSize="17sp"
            android:textColor="#777"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/interceptModelLv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="显示农历"
            android:textSize="19sp"
            android:textColor="#000"/>

        <ToggleButton
            android:id="@+id/blackListTb"
            style="@style/MyToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0FFF"
            android:paddingLeft="5dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#FFF" >

        <TextView
            android:text="程序使用说明"
            android:textSize="19sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

        <ImageView
            android:src="@mipmap/next_page_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <Button
        android:id="@+id/addPlugin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/add_plugin"
        android:textSize="20sp"
        android:textColor="#2222FF"
        android:background="@drawable/selector_confirm_button"
        android:layout_marginTop="10dp" />
</LinearLayout>
</ScrollView>
